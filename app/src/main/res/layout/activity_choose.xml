<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".activityChoose.ChooseActivity">

    <TextView
        android:id="@+id/tv_description_cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Botão para consultar seu CEP."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_consult_cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Consultar"
        app:layout_constraintEnd_toEndOf="@+id/tv_description_cep"
        app:layout_constraintStart_toStartOf="@+id/tv_description_cep"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_cep" />

    <TextView
        android:id="@+id/tv_description_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Botão para retornar um conselho."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_description_cep"
        app:layout_constraintStart_toStartOf="@+id/tv_description_cep"
        app:layout_constraintTop_toBottomOf="@+id/bt_consult_cep" />

    <Button
        android:id="@+id/bt_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Consultar"
        app:layout_constraintEnd_toEndOf="@+id/tv_description_cep"
        app:layout_constraintStart_toStartOf="@+id/tv_description_cep"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_advice" />

    <TextView
        android:id="@+id/tv_chuck_norris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Botão para retornar uma frase do Chuck Norris."
        app:layout_constraintEnd_toEndOf="@+id/tv_description_cep"
        app:layout_constraintStart_toStartOf="@+id/tv_description_cep"
        app:layout_constraintTop_toBottomOf="@+id/bt_advice" />

    <Button
        android:id="@+id/bt_chuck_norris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_description_cep"
        app:layout_constraintStart_toStartOf="@+id/tv_description_cep"
        app:layout_constraintTop_toBottomOf="@+id/tv_chuck_norris" />


</androidx.constraintlayout.widget.ConstraintLayout>